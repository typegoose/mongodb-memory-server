{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "noEmit": false,
    "target": "es2023",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": false,
    "strict": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "importHelpers": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
